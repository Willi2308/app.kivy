from kivy.app import App 
from kivy.uix.label import Label

class minhaApp(App):
    def build(self):
        return Label(
            text='ola, senai',
            halign='left',  
            valign='top',   
            size_hint=(None, None),
            size=(150,50),
            text_size=(150, None)
        )

if __name__=="__main__":
    minhaApp().run()
